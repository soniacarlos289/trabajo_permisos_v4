<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <security-constraint>
    <display-name>Escritura</display-name>
    <web-resource-collection>
      <web-resource-name>Paginas de gestion</web-resource-name>
      <url-pattern>/jsp/gestion/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>GA_W_PERMISOS</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>Lectura</display-name>
    <web-resource-collection>
      <web-resource-name>Paginas de consulta</web-resource-name>
      <url-pattern>/jsp/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>GA_R_PERMISOS</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>Example Form-Based Authentication Area</realm-name>
    <form-login-config>
      <form-login-page>/jaas/login.jsp</form-login-page>
      <form-error-page>/jaas/error.jsp</form-error-page>
    </form-login-config>
  </login-config>
  <security-role>
      <role-name>GA_R_PERMISOS</role-name>
  </security-role>
  <security-role>
      <role-name>GA_W_PERMISOS</role-name>
  </security-role> 
  <filter>
    <display-name>AuthenticationFilter</display-name>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>es.aytosalamanca.http.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/login.jsp</url-pattern>
  </filter-mapping>
</web-app>